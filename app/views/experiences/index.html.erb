<div class="p-3">
  <div class="sm:grid gap-6">
    <% @experiences.each do |experience| %>
      <div class="flex flex-col-2 bg-white p-2 shadow-lg ">
        <%= link_to experience_path(experience) do %>
        <%= image_tag url_for(experience.images.first), class: "rounded w-full h-48 object-cover" %>
        <% end %>
        <div class="p-4 flex-1 flex flex-col">
          <h2 class="font-bold text-xl mb-2"><%= experience.title %></h2>
          <p class="flex-1 text-gray-800"><%= experience.country %>, <%= experience.region %></p>
          <p class="text-gray-800">â‚¬<%= experience.nightly_price %>/night</p>
          <p class="text-gray-800"><%= experience.hours_per_week %> hours/week</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
