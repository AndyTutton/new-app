<body class="bg-white">
  <!-- Image Gallery -->
  <div class="">
    <h3 class="text-xl font-semibold text-gray-900"></h3>
    <div class="">
      <% @experience.images.each do |image| %>
        <%= image_tag(image, style: "object-fit: contain; width: 100%; height: 400px;") %>
      <% end %>
    </div>
  </div>


  <div class="flex flex-col items-center p-6 min-h-screen">


      <h1 class="font-sans text-4xl"><%= @experience.title %></h1>
      <p class="text-lg"><%= @experience.country %>, <%= @experience.region %></p>
      <p class="text-2xl"><strong>Description:</strong> <%= @experience.description %></p>

    <div class="mt-4">
      <h3 class="text-xl font-semibold text-gray-900">New Experience</h3>
      <p class="text-gray-700">Check out our latest experience:</p>
      <a href="<%= new_experience_path %>" class="text-blue-600 hover:underline">View New Experience</a>
    </div>


    <div class="mt-8 bg-teal-400 text-white font-bold py-4 px-8 rounded-full hover:bg-green-400">
      <%= link_to "Edit", edit_experience_path(@experience), class: "inline-block" %>
    </div>



      <!-- Host Information -->
      <div class="mt-4 flex items-center">
        <img src="https://via.placeholder.com/100" class="w-12 h-12 rounded-full mr-3" alt="Host Avatar"/>
        <div>
          <h4 class="text-lg font-bold text-gray-900">Host Name</h4>
          <p class="text-sm text-gray-600">Bio of the host goes here.</p>
        </div>
      </div>

      <!-- Directions -->
      <div class="mt-4">
        <h3 class="text-xl font-semibold text-gray-900">Directions</h3>
        <p class="text-gray-700">Directions to the location go here.</p>
        <a href="#" class="text-blue-600 hover:underline">Open in Google Maps</a>
      </div>

    </div>

    <!-- Footer -->
    <footer class="mt-8 w-full bg-white p-4 text-center">
      <p class="text-sm text-gray-600">&copy; 2024 Finca Tierra. All rights reserved.</p>
    </footer>

  <!-- New Experience Link -->
  </div>


</body>
